<%- include ../partials/header.ejs %>

<!-- Add Page --> 
<img src="../Assets/images/contact-list-banner.jpg" class="img-fluid" alt="Image"><br><br>


  
<div class="container">
    <div class="row">
        <div class="offset-md-1 col-md-10">
        <h1 class="display-3" style="text-align: center;">Add a contact</h1><br>


    <form class="form" method="POST">
        <div class="form-group">
            <label for="firstTextField">First Name</label>
            <input type="text" class="form-control"
            id="firstTextField"
            placeholder="Enter the first name"
            name="first" required>
        </div>

        <div class="form-group">
            <label for="lastTextName">Last Name</label>
            <input type="text" class="form-control"
            id="lastTextName"
            placeholder="Enter the last name"
            name="last" required>
        </div>
        
        <div class="form-group">
            <label for="phoneTextName">Phone Number</label>
            <input type="number" class="form-control"
            id="phoneTextName"
            placeholder="Enter the phone number"
            name="number" required>
        </div>

        <div class="form-group">
            <label for="emailTextName">E-mail</label>
            <input type="text" class="form-control"
            id="emailTextName"
            placeholder="Enter the e-mail"
            name="email" required>
        </div>

        <button class="btn btn-primary">
            <i class="fas fa-edit"></i> Submit
        </button>

        <a href="/contact-list" class="btn btn-warning">
            <i class="fas fa-undo"></i> Cancel</a>
    </form><br><br><br><br><br>
</div>





