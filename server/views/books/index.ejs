<%- include ../partials/header.ejs%>



               <main class="container" >
               <div class="row">
         <div class="col-md-offset-1 col-md-10">
         <h1><%= title %></h1>
           <a href="/books/add" class="btn btn-primary" role="button">
          <i class="fa fa-plus"></i> Add a book</a>
        <br>
        <table class="table table-bordered table-striped table-hover">
        <!-- Header Row -->
        <tr class="d-flex">      
                  <th class="text-center">Title</th>
                  <th class="text-center">Description</th>
                  <th class="text-center">Price</th>
                  <th class="text-center">Author</th>
                  <th class="text-center">Genre</th>
                  <th class="text-center"></th>
                  <th class="text-center"></th>
        </tr>
                <!-- Repeat Template Row -->
                <% for(let count = 0; count < books.length; count++) { %>
                <tr class="d-flex">
                  <td class="text-center"><%= books[count].title %></td>
                  <td class="col-4"><%= books[count].description %></td>
                  <td class="text-center"><%= books[count].price %></td>
                  <td class="text-center"><%= books[count].author %></td>
                  <td class="text-center"><%= books[count].genre %></td>

                  <td class="text-center">
                    <!-- ------------------------ -->
                    <!-- ADD the EDIT BUTTON HERE (check if ._id works) -->
                    <!-- ------------------------ -->
                      <a href="/books/edit/<%= books[count]._id %>" class="btn btn-primary btn-sm">
                    <i class="fas fa-pencil-alt"></i> Edit </a> 
                  </td>
                   <td class="text-center">
                    <!-- ------------------------ -->
                    <!-- ADD the DELETE BUTTON HERE (check if ._id works) -->
                    <!-- ------------------------ -->
                     <a href="/books/delete/<%= books[count]._id %>" class="btn btn-danger btn-sm">
                    <i class="fas fa-trash-alt"></i> Delete </a> 
                  </td>
                </tr>
                <%  } %>
        </table>
          </div>
      </div>
        </main>
    




  
    <%- include ../partials/footer.ejs%>
